 <% unless comment.id.blank?%>
<% if @article.user %>
<div class="row">
        <div class="col-sm-2 text-center">
         <%= link_to  gravatar_for(comment.user),user_path(comment.user),height:"45", width:"45" %>
        </div>
        
        <div class="col-sm-10">
         <small> Created by: <%= comment.user.username if comment.user %>  
                        <%= time_ago_in_words(comment.created_at) unless comment.created_at.blank? %> ago,
                        last updated: <%= time_ago_in_words(comment.updated_at) unless comment.created_at.blank? %> ago </small>
                      <% end %>
          <p><%= sanitize comment.body%></p>
          <br>
        </div>
    </div> 
  
 <div class="comment">
               
               <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
               
<%= link_to "Delete This Comment" , [comment.article,comment],method: :delete, 
                                         data: {confirm: "Are you sure you want to delete this article?"},
                                         class: "btn btn-xs btn-danger" %>
                <% end %>
                
</div>
<% end %>

